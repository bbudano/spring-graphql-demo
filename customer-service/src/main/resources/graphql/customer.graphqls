type Query {
    customers: [Customer]
    customersByName(name: String): [Customer]
    customerById(id: ID): Customer
    me: User
}

type Mutation {
    addCustomer(name: String): Customer
    updateCustomer(id: ID, name: String): Customer
    deleteCustomer(id: ID): Int
}

type Customer {
    id: ID
    name: String
    orders: [Order]
}

type Order {
    id: ID
    customerId: ID
}

type User {
    username: String
    role: String
}
